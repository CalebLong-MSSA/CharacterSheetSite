@model ProjectStep8LoginPage.Models.Inventory
@{
   Layout = null;
}

<!DOCTYPE html>
<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title> D&D Inv </title>
   <link href="~/lib/bootstrap/dist/css/bootstrap.min.css"
         rel="stylesheet" />
</head>

<body>

   <div class="text-center">
      <h1>D&D Character Sheet Site</h1>
      <hr />
      <h2>Inventory</h2>
   </div>
   <hr />


   <form asp-action="Inventory" method="post">
      <div asp-validation-summary="All"> </div>
      <div class="text-center">
         <label asp-for="Invent"><b> Inventory: </b></label><br />
         <textarea asp-for="Invent" placeholder="Stuff" style="min-height:300px;min-width:80%"></textarea><br />

         <label asp-for="AV"><b> Armor Value: </b></label>
         <input asp-for="AV" placeholder="17" required>

         <button type="submit">Submit</button>
      </div>
   </form>

</body>
</html>